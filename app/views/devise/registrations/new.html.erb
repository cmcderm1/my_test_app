<h1 class="register">Join our vinyl community! Register below...</h1>

<%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
  <%= devise_error_messages! %>

  <div class="field">
    <%= f.label :email, class: "register-labels" %><br />
    <%= f.email_field :email, autofocus: true, autocomplete: "email", class: "register-fill" %>
  </div>

  <div class="field">
    <%= f.label :password, class: "register-labels" %>
    <% if @minimum_password_length %>
    <em>(<%= @minimum_password_length %> characters minimum)</em>
    <% end %><br />
    <%= f.password_field :password, autocomplete: "new-password", class: "register-fill" %>
  </div>

  <div class="field">
    <%= f.label :password_confirmation, class: "register-labels" %><br />
    <%= f.password_field :password_confirmation, autocomplete: "new-password", class: "register-fill" %>
  </div>

  <div class="actions">
    <%= f.submit "Register", class: "register-btn" %>
  </div>
<% end %>

<%= render "devise/shared/links" %>
