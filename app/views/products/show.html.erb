<p id="notice"><%= notice %></p>

<div class="container" id="single-product">
  <div id="album-name">
    <h2 id="single-product-title">Album Name:</h2>
      <%= @product.name %>
  </div>

  <div id= "album-description">
    <h2 id="single-product-title">Description:</h2>
      <%= @product.description %>
  </div>

  <div id ="album-image">
    <h2 id= "single-product-title">Image url:</h2>
      <%= @product.image_url %>
  </div>

  <div id="album-price">
    <h2 id="single-product-title">Price:</h2>
      <%= @product.price %>
  </div>

  <div id="album-lowest-rating">
     <h4 class="product-indent">Best Review:</h4>
    <p>  <%= @product.lowest_rating_comment.rating %></p>
    <p>  <%= @product.lowest_rating_comment.body%></p>

  </div>


  <div id="album-highest-rating">
      <h4 class="product-indent">Worst Review:</h4>
    <p><%= @product.highest_rating_comment.rating %></p>
      <p>"<%= @product.highest_rating_comment.body%>"</p>
  </div>



  <%= render 'new_comment' %>
  <%= render 'comments' %>



</div>
<%= link_to 'Edit', edit_product_path(@product) %>
<%= link_to 'Back', products_path %>
