<p id="notice"><%= notice %></p>

<div class="container" id="single-product">
  <div id="album-name">
    <h2 id="single-product-title">Album Name:</h2>
      <%= @product.name %>
  </div>

  <div id= "album-description">
    <h2 id="single-product-title">Description:</h2>
      <%= @product.description %>
  </div>

  <div id ="album-image">
    <%= image_tag @product.image_url, class: 'list_image' %>
  </div>

  <div id="album-price">
    <h2 id="single-product-title">Price:</h2>
      <%= @product.price %>
  </div>

  <p>Average Rating: <div class="rated" data-score="<%= @product.average_rating %>"></div> </p>

  <%= form_with(url: '/payments/create') do |form| %>
    <%= render partial: "shared/stripe_checkout_button" %>
  <% end %>

  <%= render 'new_comment' %>
  <%= render 'comments' %>



</div>
<%= link_to 'Edit', edit_product_path(@product) %>
<%= link_to 'Back', products_path %>
